{
  "name": "microcloud",
  "version": "0.1.0",
  "private": true,
  "description": "µCloud minimal P2P prototype: signaling server, WebRTC client, protocol, heartbeat",
  "main": "dist/server/index.js",
  "scripts": {
    "ensure-dirs": "node scripts/ensure-dirs.js",
    "prebuild": "npm run ensure-dirs",
    "prebuild:client": "npm run ensure-dirs",
    "prebuild:server": "npm run ensure-dirs",
    "dev": "ts-node --transpile-only server/src/index.tsx",
    "build:client": "esbuild client/src/webrtc.tsx --bundle --format=iife --outfile=client/dist/webrtc.js",
    "build:server": "tsc -p tsconfig.server.json",
    "typecheck": "tsc --noEmit",
    "build": "npm run typecheck && npm run build:client && npm run build:server",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/ws": "^8.5.10",
    "esbuild": "^0.21.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  }
}

  "version": "1.0.0",
  "description": "μCloud - Peer-assisted caching system",
  "main": "server/server.ts",
  "scripts": {
    "start": "tsx server/server.ts",
    "server": "tsx server/server.ts",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:server": "tsc server/server.ts --outDir dist-server --module commonjs --target es2020 --esModuleInterop --resolveJsonModule",
    "preview": "vite preview"
  },
  "keywords": [
    "p2p",
    "caching",
    "webrtc",
    "distributed"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mantine/core": "^7.5.0",
    "@mantine/hooks": "^7.5.0",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^1.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
