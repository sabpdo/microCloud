{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "rootDir": "server/src"
  },
  "include": ["server/src/**/*.ts", "server/src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "client"]
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./dist-server",
    "rootDir": "./server",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "src", "dist"]
}

