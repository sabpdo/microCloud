{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist/server",
    // No rootDir restriction - we import from src/ and server/
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "isolatedModules": false,
    "jsx": "react"
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "dist", "client", "src"]
}
